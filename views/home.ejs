  <main class="feed-container">
    <!-- Post 1 -->
    <% posts.forEach(function(elem){ %> 
      <div class="post">
        <div class="post-header">
          <img src="/images/uploads/<%=elem.user.profileImage%>" class="avatar" alt="User 1" />
          <p class="username"><%= elem.user.username %></p>
        </div>
        <img src="/images/uploads/<%=elem.picture%>" class="post-img" alt="Post Image" />
        <div class="post-actions">
          <i class="fa-regular fa-heart"></i>
          <i class="fa-regular fa-comment"></i>
          <i class="fa-regular fa-paper-plane"></i>
        </div>
        <div class="post-caption">
          <strong><%= elem.user.username %></strong> <%=elem.caption%>
        </div>
      </div>
  

    <% }) %>
    
